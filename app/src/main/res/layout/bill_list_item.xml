            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@id/pic_name_view"
            android:layout_toEndOf="@id/pic_name_view"
            style="@style/TextAppearance.AppCompat.Body1"
